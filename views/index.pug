        div.container
            div.row
                div.col-md-12
                #carouselExample.carousel.slide
                    .carousel-inner
                        each imagex,index in images
                            if index === 0
                                .carousel-item.active
                                    img.d-block.w-100(src=imagex, style= "heigt: 300px" alt='...')
                            else 
                                .carousel-item 
                                    img.d-block.w-100(src=imagex, style= "heigt: 300px" alt='...')
                    //- .carousel-item
